<!-- Page Content -->
<section id="view-tours-main" class="mb-3">
    <div class="container mb-3">
        <div class="row justify-content-center align-items-center text-center">
            <div class="col-lg-6">
                <h1 class="mt-5">View All Tours</h1>
            </div>
        </div>
    </div>

    <div class="container">
        {{#each tours}}
        <div class="row justify-content-center align-items-center text-center">
            <div class="col-lg-10">
                <div class="card shadow-sm">
                    {{!-- FOR LATER: Add user/creator name once it's been added to the schema. --}}
                    <h5 class="card-header">{{title}} <span id="creator" class="font-italic">by
                            John Smith</span></h5>
                    <div class="card-body">
                        <img src="{{URL}}" alt="..." class="img-thumbnail w-50 mb-2">
                        <h3><span id="neighborhood" class="badge badge-info">{{neighborhood}}</span></h3>
                        <h5><span id="duration" class="badge badge-danger">{{duration}} minutes</span></h5>
                        <p>
                            {{#each tags}}
                            <span class="tour-tag badge badge-secondary">{{tag}}</span>
                            {{!-- <span class="tour-tag badge badge-secondary">Historic</span>
                            <span class="tour-tag badge badge-secondary">Family Friendly</span> --}}
                            {{/each}}
                        </p>
                        <p class="card-text">{{description}}</p>
                        <a href="/tour/{{id}}" class="btn btn-outline-secondary btn-lg btn-block" role="button">View Tour</a>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <h3 class="text-center font-italic">There are currently no tours available.</h3>
        {{/each}}
    </div>
</section>